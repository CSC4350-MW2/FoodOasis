<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:text="Title"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:id="@+id/rvShopTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.063"
            app:layout_constraintVertical_bias="0.188"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/black" />

    <TextView
            android:text="Category"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:id="@+id/rvShopCategory"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvShopTitle"
            app:layout_constraintEnd_toEndOf="@+id/rvShopTitle"
            app:layout_constraintStart_toStartOf="@+id/rvShopTitle"
            app:layout_constraintHorizontal_bias="0.028"
            app:layout_constraintVertical_bias="0.227"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

    <TextView
            android:text="Address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rvShopAddress"
            app:layout_constraintTop_toBottomOf="@+id/rvShopCategory"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/rvShopCategory"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@+id/viewShopButton" />

    <Button
            android:text="View"
            android:layout_width="72dp"
            android:layout_height="48dp"
            android:id="@+id/viewShopButton"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/rvShopCategory"
            app:layout_constraintEnd_toEndOf="@+id/rvShopCategory" />

</androidx.constraintlayout.widget.ConstraintLayout>